<view class="container">
  <!-- banner -->
  <swiper 
  indicator-dots="{{indicatorDots}}" 
  autoplay="{{autoplay}}" 
  interval="{{interval}}" 
  duration="{{duration}}" 
  circular="{{circular}}"
  class='banner'
  >
    <block wx:for="{{swiperImages}}" wx:key="*this">
      <swiper-item>
        <image src="{{item}}" class="bannerImage"/>
      </swiper-item>
    </block>
  </swiper>
  <!-- nav -->
  <scroll-view 
  scroll-x="{{scrollX}}" 
  scroll-left='{{distanceX}}'
  class='navBox'
  >
    <view wx:for="{{nav}}" wx:key="id" 
    class='nav {{currentNav == item.id ? "active": ""}}' 
    id='{{item.id}}' 
    bindtap='tapNav' 
    data-index='{{index}}'
    >
      <text class='navText'>{{item.name}}</text>
    </view>
  </scroll-view>
  <view class='goods'>
    <view wx:for="{{goods}}" wx:key="id" class='item'>
      <image src="{{item.image}}" class='itemImage'></image>
      <text class='itemText'>{{item.name}},{{item.price}}</text>
    </view>
  </view>
</view>
